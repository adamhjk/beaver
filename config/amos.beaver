# Finding logs!

# Configure this job
set :source => "amos"

# Execute the job
find('/srv/avvo/shared/log', :recurse => false) do |file|
  add_file(file) if file =~ /^foobar_production/
end
compress(:with => :gzip)
rename(:append => `hostname`.chomp! + "_")
transfer(:with => :rsync)
transfer(:with => :s3)
delete(:keep => 10)
