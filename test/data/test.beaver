# Finding logs!

# Configure this job
set :source => "unit test"
set :compress_directory => COMPRESSDIR
set :rename_directory => RENAMEDIR
set :transfer_user => ENV["LIVE_USER"]
set :transfer_host => ENV["LIVE_HOST"]
set :transfer_ssh_key  => ENV["LIVE_KEY"]
set :transfer_to => "/tmp"

find(FINDDIR) do |file|
  add_file(file) if file =~ /foobar/
end
compress(:with => :gzip)
rename(:prepend => `hostname`.chomp! + "_")
transfer(:with => :scp)
delete(:keep => 10)
